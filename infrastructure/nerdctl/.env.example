# ==============================================================================
# Local Mind Infrastructure - Environment Configuration
# ==============================================================================
# Copy this file to .env for docker-compose/podman:
#   cp .env.example .env
# ==============================================================================

# ==============================================================================
# Container Settings
# ==============================================================================
COMPOSE_PROJECT_NAME=localmind
CONTAINER_NAMESPACE=localmind-ai

# ==============================================================================
# Neo4j Configuration
# ==============================================================================
# SECURITY WARNING: Change NEO4J_PASSWORD before deploying to production!
# Generate a strong password with: openssl rand -base64 32
NEO4J_USER=neo4j
NEO4J_PASSWORD=CHANGE_ME_IN_PRODUCTION

# Memory settings (adjust based on available RAM)
NEO4J_HEAP_INITIAL=512m
NEO4J_HEAP_MAX=1G
NEO4J_PAGECACHE=512m

# ==============================================================================
# MinIO Configuration (Milvus storage backend)
# ==============================================================================
# SECURITY WARNING: Change MINIO_SECRET_KEY before deploying to production!
# Generate with: openssl rand -base64 32
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=CHANGE_ME_IN_PRODUCTION

# ==============================================================================
# Port Mappings
# ==============================================================================
# Neo4j
NEO4J_BROWSER_PORT=7474
NEO4J_BOLT_PORT=7687

# Redis
REDIS_PORT=6379

# Milvus
MILVUS_PORT=19530
