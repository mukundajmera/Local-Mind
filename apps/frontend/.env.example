# ==============================================================================
# Local Mind Frontend - Environment Configuration
# ==============================================================================
# Copy this file to .env.local for Next.js to pick up:
#   cp .env.example .env.local
# ==============================================================================

# ==============================================================================
# API Connection
# ==============================================================================
# Backend API URL (public - exposed to browser)
NEXT_PUBLIC_API_URL=http://localhost:8000

# ==============================================================================
# Application Settings
# ==============================================================================
NEXT_PUBLIC_APP_NAME=Local Mind
NEXT_PUBLIC_APP_VERSION=0.1.0

# ==============================================================================
# Feature Flags
# ==============================================================================
# Enable/disable audio podcast generation
NEXT_PUBLIC_ENABLE_AUDIO=true

# Enable/disable knowledge graph visualization
NEXT_PUBLIC_ENABLE_GRAPH=true

# Enable/disable chat interface
NEXT_PUBLIC_ENABLE_CHAT=true

# ==============================================================================
# Development Settings
# ==============================================================================
# Hot reload port (if different from default)
PORT=3000

# Node environment
NODE_ENV=development
